<resources>

    <!-- Base application theme. -->
    <style name="LightAppTheme" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/colorLightPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:windowBackground">@color/colorLightPrimary</item>
    </style>


    <style name="SettingsTheme">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textLightPrimary</item>
        <item name="android:textColorSecondary">@color/textLightSecondary</item>
        <item name="android:textColorAlertDialogListItem">@color/textLightPrimary</item>
    </style>

</resources>
