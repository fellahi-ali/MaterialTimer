<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="General"
        android:key="pref_key_storage_settings">
        <ListPreference
            android:title="Theme"
            android:summary="CurrentColor"
            android:entries="@array/Themes"
            android:entryValues="@array/Themes"
            android:key="theme_values">
        </ListPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Main Profile">
        <SeekBarPreference
            android:title="Work">
        </SeekBarPreference>
        <SeekBarPreference
            android:title="Break">
        </SeekBarPreference>
        <SeekBarPreference
            android:title="Long Break">
        </SeekBarPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Timer"
        android:key="pref_key_storage2_settings">
        <CheckBoxPreference
            android:title="Testing"
            android:summary="testing the summary">
        </CheckBoxPreference>
        <SwitchPreference
            android:title="Vibrate">
        </SwitchPreference>
    </PreferenceCategory>
</PreferenceScreen>