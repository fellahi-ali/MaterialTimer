<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="General">
        <ListPreference
            android:title="Theme"
            android:summary="CurrentColor"
            android:entries="@array/Themes"
            android:entryValues="@array/Themes"
            android:key="pref_theme_value"
            android:defaultValue="@string/themeDefaultValue"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Timer Profile">
        <ListPreference
            android:title="Work Time"
            android:entries="@array/WorkTime"
            android:entryValues="@array/WorkTime"
            android:key="pref_work_time"
            android:defaultValue="@integer/workTimeDefaultValue"/>
        <ListPreference
            android:title="Break Time"
            android:entries="@array/BreakTime"
            android:entryValues="@array/BreakTime"
            android:key="pref_break_time"
            android:defaultValue="@integer/breakTimeDefaultValue"/>
        <ListPreference
            android:title="Long Break Time"
            android:entries="@array/BreakTime"
            android:entryValues="@array/BreakTime"
            android:key="pref_long_break_time"
            android:defaultValue="@integer/longBreakTimeDefaultValue"/>
        <ListPreference
            android:title="Loops until long break"
            android:entries="@array/LoopAmount"
            android:entryValues="@array/LoopAmount"
            android:key="pref_loop_amount"
            android:defaultValue="@integer/loopAmountDefaultValue"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Sound">
        <SwitchPreference
            android:title="Vibrate"
            android:key="pref_vibrate"
            android:defaultValue="@bool/vibrateDefaultValue"/>
    </PreferenceCategory>

</PreferenceScreen>